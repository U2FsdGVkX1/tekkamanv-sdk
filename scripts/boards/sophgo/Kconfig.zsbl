config ZSBL_WITH_DEFAULT_CROSS_COMPILE
	bool "Corss compiler in the distro"

config ZSBL_WITH_CUSTOM_CROSS_COMPILE
	bool "custom corss compiler"

endchoice

#if ZSBL_WITH_DEFAULT_CROSS_COMPILE
#
#endif

if ZSBL_WITH_CUSTOM_CROSS_COMPILE

config ZSBL_CUSTOM_CROSS_COMPILE_DIR
	string "The custom corss compiler directory/path"
	default "/usr/bin"

config ZSBL_CUSTOM_CROSS_COMPILE
