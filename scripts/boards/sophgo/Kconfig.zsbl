	string "The branch we will use in zsbl Remote REPO"
	default "master"

endif

if ZSBL_GIT_REPO_L

config ZSBL_GIT_LBRANCH
	string "The branch/commit we will use in local REPO"
	default "master"

endif

if ZSBL_RAW_SRC

config ZSBL_SRC_PATH
	string "The source code dir for zsbl"
